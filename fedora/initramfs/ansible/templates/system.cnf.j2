[init]
selinux = false
# i.e. vda or sda
{% if (ansible_facts.devices.keys() | select('match', '[sv]d') | list | length) == 1 %}
device = /dev/{{ ansible_facts.devices.keys() | select('match', '[sv]d') | first }}
{% else %}
device = /dev/NOTFOUND
{% endif %}
cryptsetup = true
password-file = pw
release = 32
authorized-keys = {{ lookup('file', lookup('env', 'HOME')+'/.ssh/' + ssh_key_name + '-ed25519.pub') }}

